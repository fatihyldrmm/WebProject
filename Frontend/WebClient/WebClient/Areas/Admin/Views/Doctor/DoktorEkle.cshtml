@model Doctor

@{
    ViewBag.Title = "Doktor Ekle";
}

<h2>Doktor Ekle</h2>

<form action="/Doctor/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Adı:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Adı giriniz" >
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="Surname">Soyadı:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Surname" name="Surname" placeholder="Soyadı giriniz" >
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="PoliclinicId">Poliklinik ID:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="PoliclinicId" name="PoliclinicId" placeholder="Poliklinik ID giriniz">
        </div>
    </div>

    <!-- Burada Policlinic ve Appointments için ek girdiler veya dropdown menüler eklenebilir -->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
</form>
